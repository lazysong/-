<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.lazysong.gojob.view.fragment.DiscoverFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/tag_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="10dp"
            app:container_enable_drag="false"
            app:horizontal_interval="10dp"
            app:vertical_interval="10dp"
            app:tag_clickable="true"
            app:tag_background_color="@android:color/white"
            app:tag_border_color="@color/colorPrimary"
            app:container_background_color="#ececec"
            app:container_border_color="#ececec"
            tag_ripple_color="#000000"
            app:tag_theme="pure_teal" />

        <Button
            android:id="@+id/btnSelectTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择标签"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleviewDiscover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </ScrollView>
    </LinearLayout>



</FrameLayout>
