<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.activity.ModifyUserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_id"
        android:id="@+id/userid_edit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nickname_edit"
        android:layout_below="@+id/userid_edit"
        android:layout_centerHorizontal="true"
        android:text="nickname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_edit"
        android:layout_below="@+id/nickname_edit"
        android:layout_centerHorizontal="true"
        android:text="sign" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sex_edit"
        android:layout_below="@+id/sign_edit"
        android:layout_centerHorizontal="true"
        android:text="sex" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/birthday_edit"
        android:layout_below="@+id/sex_edit"
        android:layout_centerHorizontal="true"
        android:text="birthday" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_edit"
        android:layout_below="@+id/birthday_edit"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/confirm_edit"
        android:layout_below="@+id/birthday_edit"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/cancle_edit"
        android:layout_below="@+id/confirm_edit"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
