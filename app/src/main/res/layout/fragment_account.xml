<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorFragmetBackgroundLight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/set_bar">

        <RelativeLayout
            android:id="@+id/layoutUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg_account_listview">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bilibili" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@id/imgUser"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未登录"
                    android:textColor="@color/ColorTextGray"
                    android:textSize="@dimen/text_account_username" />

                <TextView
                    android:id="@+id/tvsign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="尚未设置签名"
                    android:textColor="@color/ColorTextLightGray"
                    android:textSize="@dimen/text_account_sign" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.andexert.library.RippleView
                    rv_centered="true"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize">

                    <RelativeLayout
                        android:id="@+id/layoutMark"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_listview_account"
                        android:background="@drawable/touch_bg_account_listview"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:id="@+id/imgMark"
                            android:layout_width="@dimen/size_listview_icon_account"
                            android:layout_height="@dimen/size_listview_icon_account"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:alpha="20"
                            android:src="@mipmap/ic_favorite_more"
                            android:tint="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/imgMark"
                            android:text="我的收藏"
                            android:textColor="@color/ColorTextGray" />
                    </RelativeLayout>
                </com.andexert.library.RippleView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="74dp"
                    android:background="@color/textLightGray" />

                <com.andexert.library.RippleView
                    rv_centered="true"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize">

                    <RelativeLayout
                        android:id="@+id/layoutFollow"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_listview_account"
                        android:background="@drawable/touch_bg_account_listview"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:id="@+id/imgWatch"
                            android:layout_width="@dimen/size_listview_icon_account"
                            android:layout_height="@dimen/size_listview_icon_account"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@mipmap/ic_follow_more"
                            android:tint="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/imgWatch"
                            android:text="我的关注"
                            android:textColor="@color/ColorTextGray" />

                    </RelativeLayout>
                </com.andexert.library.RippleView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="74dp"
                    android:background="@color/textLightGray" />

                <com.andexert.library.RippleView
                    rv_centered="true"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize">

                    <RelativeLayout
                        android:id="@+id/layoutWillings"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_listview_account"
                        android:background="@drawable/touch_bg_account_listview"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:id="@+id/imgWillings"
                            android:layout_width="@dimen/size_listview_icon_account"
                            android:layout_height="@dimen/size_listview_icon_account"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@mipmap/ic_willing_account"
                            android:tint="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/imgWillings"
                            android:text="求职意向"
                            android:textColor="@color/ColorTextGray" />
                    </RelativeLayout>
                </com.andexert.library.RippleView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="74dp"
                    android:background="@color/textLightGray" />

                <com.andexert.library.RippleView
                    rv_centered="true"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize">

                    <RelativeLayout
                        android:id="@+id/layoutResume"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_listview_account"
                        android:background="@drawable/touch_bg_account_listview"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:id="@+id/imgResume"
                            android:layout_width="@dimen/size_listview_icon_account"
                            android:layout_height="@dimen/size_listview_icon_account"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@mipmap/ic_resume_account"
                            android:tint="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/imgResume"
                            android:text="个人简历"
                            android:textColor="@color/ColorTextGray" />
                    </RelativeLayout>
                </com.andexert.library.RippleView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.andexert.library.RippleView
                    rv_centered="true"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize">

                    <RelativeLayout
                        android:id="@+id/layoutSettings"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_listview_account"
                        android:background="@drawable/touch_bg_account_listview"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:id="@+id/imgSettings"
                            android:layout_width="@dimen/size_listview_icon_account"
                            android:layout_height="@dimen/size_listview_icon_account"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@mipmap/ic_setup_more"
                            android:tint="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/imgSettings"
                            android:text="设置"
                            android:textColor="@color/ColorTextGray" />
                    </RelativeLayout>
                </com.andexert.library.RippleView>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>
